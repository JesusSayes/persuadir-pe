%p#notice= notice

.banner-article
  = @article.summary.html_safe
.body-article
  %p
    %h1= @article.title.html_safe
  %p
    = @article.content.html_safe

= user_tools @article, false

:javascript
  opts = {
    theme: "advanced",
    theme_advanced_buttons1: "bold,italic,underline,separator,bullist,numlist,separator,undo,redo,separator,uploadimage",
    theme_advanced_buttons2: "",
    theme_advanced_buttons3: "",
    theme_advanced_toolbar_location: "top",
    theme_advanced_toolbar_align: "left",
    theme_advanced_statusbar_location: "none",
    plugins: "uploadimage",
    relative_urls: false
  };
  $("[rel=tinymce]").each(function(index, el) {
    $(el).tinymce(opts);
  });
