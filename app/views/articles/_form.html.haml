= tinymce_assets
.row-fluid
  .span9
    = simple_form_for @article do |f|
      - if @article.errors.any?
        #error_explanation
          %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
          %ul
            - @article.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.input :title
      .field
        = f.input :summary, :input_html => {:class => "tinymce span11"}
      .field
        = f.input :content, :input_html => {:class => "tinymce span11"}
      .field
        = f.input :menu, :collection=>2..6
      .field
        = f.input :public
      .actions
        = f.button :submit
      = tinymce

  .span3

