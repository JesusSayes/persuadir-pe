- title @consultant.name
- description( truncate_words @consultant.description.html_safe)

.row-fluid
  .row-fluid
    .consultant-name.span3
      %h3= @consultant.name
    .consultant-description.span9
      = @consultant.description.html_safe
  - if user_signed_in? and current_user.admin?
    %p
      %b Charge:
      - if @consultant.charge?
        = @consultant.charge
      - else
        No ingresado
    %p
      %b Image:
      - if @consultant.image?
        = image_tag @consultant.image
      - else
        Sin imagen

  = user_tools @consultant, false
%br
= link_to 'Back', consultants_path
