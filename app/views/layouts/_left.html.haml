.dropdown
  %ul
    %li.dropdown.item-menu
      = link_to "Inicio", root_path
    - Tag.all.each do |tag|
      - if tag.articles.count == 1
        %li.item-menu
          = link_to "#{tag.title}", tag.articles.each{|a| a}
      - elsif tag.articles.count > 1
        %li.dropdown.item-menu
          = link_to "#", {:class=>"dropdown-toggle", :"data-toggle"=>"dropdown"} do
            = tag.title
            %b.caret
          %ul.dropdown-menu
            - tag.articles.each do |article|
              %li= link_to article, article
      - else
        %li.item-menu
          = link_to "#{tag.title}", "#"
