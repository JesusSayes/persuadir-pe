!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %meta{:content => "", :name => "author"}
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    -# %meta{:content => "TQhZO-bOCns60KLjEmBkNhI2WxncnabfqWCss5scuB0", :name => "google-site-verification"}
    = favicon_link_tag
    - if content_for?(:head)
      = yield(:head)
    - else
      %title= "Persuadir | "
      %meta{name:"description", content:"Persuadir - CIC Perú - Negociación, Comunicación estratégica y liderazgo"}
  %body
    %header
      .container#header
        = render partial: "layouts/header"

    #main{:role => "main"}
      .container#body
        = render 'layouts/messages'
        .row-fluid
          - if content_for?(:menu)
            = yield :menu
            .column-right.span12
              = content_for?(:content) ? yield(:content) : yield
          - else
            .column-left.span3
              = render :partial => "layouts/left"
            .column-right.span9
              = content_for?(:content) ? yield(:content) : yield

    %footer
      .container#footer
        = render 'layouts/footer'
