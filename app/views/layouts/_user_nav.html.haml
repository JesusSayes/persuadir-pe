.user-nav
  - if user_signed_in?
    %ul.dropdown
      %li.horizontal= current_user.email
      %li.horizontal
        = link_to "#", {:class=>"dropdown-toggle", :"data-toggle"=>"dropdown"} do
          MY ACCOUNT
          %b.caret
        %ul.dropdown-menu
          %li= link_to "My Profile", edit_user_path(current_user)
          %li.divider
          - if current_user.admin?
            %li= link_to "Páginas", pages_path
            -# %li= link_to "Páginas", articles_path
            %li= link_to "Usuarios", users_path
            %li= link_to "Slides", slides_path
            %li= link_to "Noticias - Artículos", notices_path
            %li= link_to "Consultores", consultants_list_path
      %li.horizontal= link_to 'Sign out', destroy_user_session_path, :method => :delete
  - else
    = link_to 'Sign up', new_user_path
    or
    = link_to 'sign in', new_user_session_path
