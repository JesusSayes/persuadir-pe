.user-nav
  - if user_signed_in?
    %ul.dropdown
      %li.horizontal= current_user.email
      %li.horizontal
        = link_to "#", {:class=>"dropdown-toggle", :"data-toggle"=>"dropdown"} do
          MY ACCOUNT
          %b.caret
        %ul.dropdown-menu
          %li= link_to "My Profile", edit_user_path(current_user)
          %li.divider
          - if current_user.admin?
            %li= link_to "Tags", tags_path
            %li= link_to "Articles", articles_path
            %li= link_to "User", users_path
      %li.horizontal= link_to 'Sign out', destroy_user_session_path, :method => :delete
  - else
    = link_to 'Sign up', new_user_path
    or
    = link_to 'sign in', new_user_session_path
